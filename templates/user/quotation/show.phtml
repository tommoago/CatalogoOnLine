{% include 'user/structure/header.phtml' %}

<div id='content'>
	<p class="detail_adm">
		{% trans "ord" %}
	</p>
	<table class="tablelist">
		<tr>
			<th>{% trans "id" %}</th>
			<th>{% trans "date" %}</th>
			<th>{% trans "cust" %}</th>
		</tr>
		<tr>
			<td class="first_id">{{ ord.id }}</td>
			<td>{{ ord.data }}</td>
			<td>{{ ord.client }}</td>
		</tr>
	</table>
	{% for prod in products %}
	<ul data-role="listview">
		<li>
			<a href='../products/show.php?id={{ prod.id }}'>{{ prod.name }} {% trans "qty" %}:
			{{ prod.quantity }}</a>
		</li>
	</ul>
	{% endfor %}

	{% if ord.file != ''%}
	<li class="print_usr">
		<a href='{{ ord.file }}'><img src="../../../images/icons/printer/printer-256.png" alt='{% trans "print" %}'>{% trans "print" %}</a>
	</li>
	{% endif %}
</div>
{% include 'user/structure/footer.phtml' %}
