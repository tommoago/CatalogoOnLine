<script type="text/javascript">
$(function (){
    if($('#type').val() === 'user'){
        $('#cf_div').show();
        $('#piva_div').hide();
    }else{
        $('#cf_div').hide();
        $('#piva_div').show();
    }
});
function toggleDivs(){
    if($('#type').val() === 'user'){
        $('#cf_div').show();
        $('#piva_div').hide();
    } else {
        $('#cf_div').hide();
        $('#piva_div').show();
    }
}
</script>
