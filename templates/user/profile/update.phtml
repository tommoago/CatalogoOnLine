{% include 'user/structure/header.phtml' %}
{% include 'user/structure/menu.phtml' %}
<div id='content'>
    <form action="update.php" method="post" style="padding-left: 270px;">
        <input type="hidden" name="id" value="{{ usr.id }}"/>
        <div class="totwidth">
			<div class="panleft">
				Name:
			</div>
			<div class="panleft">
				<input type="text" name="name" value="{{ usr.name }}"/>
			</div>
		</div>
		<div class="totwidth">
			<div class="panleft">
				Surname:
			</div>
			<div class="panleft">
				<input type="text" name="surname" value="{{ usr.surname }}"/>
			</div>
		</div>
                {% if usr.cod_fis != '' %}
                <div class="totwidth" id="cf_div">
			<div class="panleft">
				Cod Fiscale:
			</div>
			<div class="panleft">
				<input type="text" id="cod_fis" name="cod_fis" value="{{ usr.cod_fis }}"/>
			</div>
		</div>
                {%endif%}
                {% if usr.piva != '' %}
                <div class="totwidth" id="piva_div">
			<div class="panleft">
				P.IVA:
			</div>
			<div class="panleft">
				<input type="text" id="piva" name="piva" value="{{ usr.piva }}"/>
			</div>
		</div>
                {%endif%}
		<div class="totwidth">
			<div class="panleft">
				Address:
			</div>
			<div class="panleft">
				<input type="text" name="address" value="{{ usr.address }}"/>
			</div>
		</div>
		<div class="totwidth">
			<div class="panleft">
				Email:
			</div>
			<div class="panleft">
				<input type="text" name="email" value="{{ usr.email }}"/>
			</div>
		</div>
		<div class="totwidth">
			<div class="panleft">
				Telephone:
			</div>
			<div class="panleft">
				<input type="text" name="telephone" value="{{ usr.telephone }}"/>
			</div>
		</div>
		<div class="totwidth">
			<div class="panleft">
				Cellphone:
			</div>
			<div class="panleft">
				<input type="text" name="cellphone" value="{{ usr.cellphone }}"/>
			</div>
		</div>
		<div class="totwidth">
			<div class="panleft">
				Password:
			</div>
			<div class="panleft">
				<input type="password" name="password"/>
			</div>
		</div>
		<input type="submit" value="invio"/>
    </form>
</div>
    {% include 'user/structure/footer.phtml' %}
