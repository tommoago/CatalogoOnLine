{% include 'header.phtml' %}
{% include 'menu.phtml' %}
<div id='content'>
    <div class="show_product">
        <div class="sum_product">
            {% if prod.new == 1 %}
            <img class="new" src="../../../images/icons/new/new-512.png">  
            {% endif %}
            <h4>{{ prod.barcode }}</h4>
            {% if prod.offer == 1 %}
            <img class="new" src="../../../images/icons/sale/sale-512.png">  
            {% endif %}


            <p style="margin: 5px">
                {% trans "cod" %}:  {{ prod.cod }}<br>    
                {% trans "sng" %} {% trans "qty" %}:  {{ prod.single_qty }}   <br> 
                {% trans "pck" %} {% trans "qty" %}:  {{ prod.pack_qty }} <br>   
                {% trans "cdb" %} {% trans "qty" %}: {{ prod.cardboard_qty }}  <br>  
                {% trans "cat" %}:  {{ prod.category }}   <br> 
                {% trans "sup" %}:  {{ prod.supplier }}<br>
            </p>
            <br>
            <h5>
                {% if prod.price == prod.super_price and prod.price != prod.retail_price %}
                &#128; {{ prod.retail_price }}    
                {% endif %}
            </h5>
            <h3> &#128; {{ prod.price }} </h3>    

            <div class="add_cart">
                <a href='../cart/add.php?id={{ prod.id }}'><img src="../../../images/icons/cart/buy/buy-256.png" alt="Add to cart">{% trans "add.cart" %}</a>
            </div>
        </div>
        <div class="detail_product">
            <h1>{{ prod.name }}</h1>
            <div class="show_img"><img class="show_img" src="../../{{ prod.image }}"></div>
            <h2>{{ prod.description }}</h2>
        </div>


    </div>
</div>

{% include 'footer.phtml' %}