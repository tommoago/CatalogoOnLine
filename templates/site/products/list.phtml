{% include 'header.phtml' %}
{% include 'menu.phtml' %}
<div id='content'>

    {% if prods|length > 0 %}
    <table class="tablelist">
        <tr>
            <th>Name</th>
            <th>Descr</th>
            <th>New</th>
            <th>Offer</th>
            <th>Price</th>
            <th>Cod</th>
            <th>Barcode</th>
            <th>Single Qty</th>
            <th>Pack Qty</th>
            <th>Cardboard Qty</th>
            <th>Category</th>
        </tr>
        {% for prod in prods %}
        <tr>
            <td><a href='show.php?id={{ prod.id }}'>{{ prod.name }}</a></td>
            <td>{{ prod.description }}</td>
            <td>{{ prod.new }}</td>
            <td>{{ prod.offer }}</td>
            <td>{{ prod.price }}</td>
            <td>{{ prod.cod }}</td>
            <td>{{ prod.barcode }}</td>
            <td>{{ prod.single_qty }}</td>
            <td>{{ prod.pack_qty }}</td>
            <td>{{ prod.cardboard_qty }}</td>
            <td>{{ prod.category }}</td>
            <td class="edit"><a href='../cart/add.php?id={{ prod.id }}'><img src="../../../images/icons/Adds/add_list/add_list-256.png" alt="Edit"></a></td>
        </tr>
        {% endfor %}
    </table>
        {% include 'site/pager.phtml' %}

    {%endif%}
    {% if prods|length == 0 %}
    <p>
        no elements found
    </p>
    {% endif %}
</div>

{% include 'footer.phtml' %}