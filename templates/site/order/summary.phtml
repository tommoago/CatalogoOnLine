{% include 'header.phtml' %}
<div id='content'>
    {% if prods|length > 0 %}
    <table class="tablelist">
        <tr>
            <th>{% trans "name" %}</th>
            <th>{% trans "descr" %}</th>
            <th>&#128;</th>
            <th>{% trans "cod" %}</th>
<!--             <th>{% trans "cat" %}</th> -->
            <th>{% trans "qty" %}</th>
        </tr>
        {% for prod in prods %}
        <tr>
            <td><a href='../products/show.php?id={{ prod.id }}'>{{ prod.name }}</a></td> <!-- lasciare visualizzazione?? -->
            <td>{{ prod.description }}</td>
            <td><b>{{ prod.price }}</b></td>
            <td><i>{{ prod.cod }}</i></td>
<!--             <td>{{ prod.category }}</td> -->
            <td style="text-align:center">{{ prod.qty }}</td>
        </tr>
        {% endfor %}
    </table>
        <ul>
        	
            <li class="checkout">
                <a href='confirm.php'><img src="../../../images/icons/cart/checkout/checkout_green-256.png" alt="Confirm">{% trans "confirm" %}</a>
            </li>
            <li class="empty_cart">
                <a href='../cart/empty.php'><img src="../../../images/icons/cart/return/return_red-256.png" alt="Cancel Order">{% trans "canc" %} {% trans "ord" %}</a>
            </li>
        </ul>
    {%endif%}
    {% if prods|length == 0 %}
    <p>
        {% trans "usr.emp.cart" %}
    </p>
    {% endif %}
</div>

{% include 'footer.phtml' %}