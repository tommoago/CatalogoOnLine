{% include 'header.phtml' %}
<div id='content'>

    {% if prods|length > 0 %}
    <table class="tablelist">
        <tr>
            <th>{% trans "name" %}</th>
            <th>{% trans "descr" %}</th>
            <th>&#128;</th>
            <th>{% trans "cod" %}</th>
            <th>{% trans "cat" %}</th>
            <th>{% trans "qty" %}</th>
        </tr>
        {% for prod in prods %}
        <tr>
            <td><a href='../products/show.php?id={{ prod.id }}'>{{ prod.name }}</a></td> <!-- lasciare visualizzazione?? -->
            <td>{{ prod.description }}</td>
            <td>{{ prod.price }}</td>
            <td>{{ prod.cod }}</td>
            <td>{{ prod.category }}</td>
            <td>{{ prod.qty }}</td>
        </tr>
        {% endfor %}
    </table>
        <ul>
        	  <li class="total">
                <a href='#'><img src="../../../images/icons/printer/printer-256.png" alt="Print">{% trans "print" %}</a>
            </li>
            <li class="pdf">
                <a href='#'><img src="../../../images/icons/pdf/pdf-256.png" alt="PDF">{% trans "pdf" %}</a>
            </li>
            <li class="checkout">
                <a href='confirm.php'><img src="../../../images/icons/cart/checkout/checkout_green-256.png" alt="Confirm">{% trans "confirm" %}</a>
            </li>
            <li class="empty_cart">
                <a href='../cart/empty.php'><img src="../../../images/icons/cart/return/return_red-256.png" alt="Cancel Order">{% trans "canc" %} {% trans "ord" %}</a>
            </li>
        </ul>
    {%endif%}
    {% if prods|length == 0 %}
    <p>
        {% trans "usr.emp.cart" %}
    </p>
    {% endif %}
</div>

{% include 'footer.phtml' %}