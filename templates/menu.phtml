<script type="text/javascript">
//    link per cats '{{ path }}site/products/list.php?id_cat=' + id
    $.post("{{ path }}menu.php",
            function(data) {
                if (data.length === 0) {
                    $('#demo2').append("<p>No result found.</p>");
                } else {
                    var ul, li, a;
                    for (var i = 0; i < data.length; i++) {
                        var id = data[i]['id'];
                        a = document.createElement('a');
                        li = document.createElement('li');
                        a.setAttribute('href', '#');
                        a.appendChild(document.createTextNode(data[i]['name']));

                        li.appendChild(a);
                        $('#demo2').append(li);
                        var liInn, aInn;
                        ul = document.createElement('ul');
                        for (var j = 0; j < data[i]['category'].length; j++) {
                            var cat = data[i]['category'][j];
                            var idInn = cat['id'];

                            aInn = document.createElement('a');
                            liInn = document.createElement('li');
                            aInn.setAttribute('href', '#');
                            aInn.appendChild(document.createTextNode(cat['name']));

                            liInn.appendChild(aInn);

                            ul.appendChild(liInn);
                        }
                        li.appendChild(ul);
                    }
                    $("#demo2").navgoco({accordion: true});
                }
            }, "json");

