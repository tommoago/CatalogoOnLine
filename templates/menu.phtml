<div id='content'>
    <p>
        {{ message }}
    </p>

    {% if cats|length > 0 %}

        {% for cat in cats %}
        <ul id="list">
            <li>
                <a href="products_category.php?id_cat={{ cat.id }}"> {{ cat.name }} </a>
                {% for cat2 in cat.category %}
                <ul id="list">
                    <li>
                        <a href="products_category.php?id_cat={{ cat2.id }}"> {{ cat2.name }} </a>
                    </li>
                </ul>
                {% endfor %}
            </li>
        </ul>
        {% endfor %}
    {%endif%}
    {% if cats|length == 0 %}
    <p>
        no elements found
    </p>
    {% endif %}
</div>
