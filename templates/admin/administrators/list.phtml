{% include 'admin/structure/header.phtml' %}
{% include 'admin/structure/menu.phtml' %}

<div id='content'>
	<p>
		{{ message }}
	</p>
	{% if admins|length > 0 %}
	<table class="tablelist">
		<tr>
			<th>Name</th>
			<th>User</th>
		</tr>
		{% for admin in admins %}
		<tr>
			<td><a href='show.php?id={{ admin.id }}'>{{ admin.name }}</a></td>
			<td>{{ admin.user }}</td>
                        {% if admin.role != 'jack' %}
          	<td class="delete_admin"><a href='delete.php?id={{ admin.id }}'><img src="../../../images/icons/users/remove_user/remove_user-256.png" alt="Delete"></a></td>
                        {% endif %}
			<td class="edit_admin"><a href='prepareUpdate.php?id={{ admin.id }}'><img src="../../../images/icons/users/edit_user/edit_user-256.png" alt="Edit"></a></td>
		</tr>
		{% endfor %}
	</table>
            {% include 'admin/structure/pager.phtml' %}
	{% endif %}
	{% if admins|length == 0 %}
	<p>
		no elements found
	</p>
	{% endif %}
</div>

{% include 'admin/structure/footer.phtml' %}

