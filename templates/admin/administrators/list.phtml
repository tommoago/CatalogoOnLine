{% include 'admin/structure/header.phtml' %}
<div id='content'>

	{% include 'admin/structure/menu.phtml' %}
	<p>
		{{ message }}
	</p>
	{% if admins|length > 0 %}
	<table class="tablelist">
		<tr>
			<th>Name</th>
			<th>user</th>
		</tr>
		{% for admin in admins %}
		<tr>
			<td><a href='show.php?id={{ admin.id }}'>{{ admin.name }}</a></td>
			<td>{{ admin.user }}</td>
                        {% if admin.role != 'jack' %}
                            <td class="delete"><a href='delete.php?id={{ admin.id }}'>x</a></td>
                        {% endif %}
			<td class="edit"><a href='prepareUpdate.php?id={{ admin.id }}'>[&#133;]</a></td>
		</tr>
		{% endfor %}
	</table>
        <div id="pager">
        {% if totPages > 1 %}
            <div class="pg_first"><a href="list.php?offset=0">First</a></div>
            {% if lr > 1 %}
            	<div class="pg_prev"><a href="list.php?offset={{ lr }}">Prev</a></div>
            {%endif%}
            
            {% for i in range(low = lr, high = mr, step=1) %}
                {% if (i  <= totPages) and (i > 0) %}
                    <div class="pg_nr"><a href="list.php?offset={{ i - 1}}">{{ i }}</a></div>
                {%endif%}
            {% endfor %}
            
            {% if (totPages - 1 > 6) and ((mr) < (totPages - 1))%}
                <div class="pg_next"><a href="list.php?offset={{ mr }}">Next</a></div>
            {%endif%}
             <div class="pg_last"><a href="list.php?offset={{ totPages - 1 }}">Last</a></div>
        {%endif%}
    </div>
	{% endif %}
	{% if admins|length == 0 %}
	<p>
		no elements found
	</p>
	{% endif %}
</div>

{% include 'admin/structure/footer.phtml' %}

