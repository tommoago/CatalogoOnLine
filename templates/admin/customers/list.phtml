{% include 'admin/structure/header.phtml' %}
{% include 'admin/structure/menu.phtml' %}
<div id='content'>
	<p class="detail_adm">{% trans "custs" %}' {% trans "list" %}</p>
    <p>{{ message }}</p>
    {% if customers|length > 0 %}
    <table class="tablelist">
        <tr>
            <th>{% trans "name" %}</th>
            <th>{% trans "sur" %}</th>
            <th>{% trans "codf" %}</th>
            <th>{% trans "piva" %}</th>
            <th>{% trans "adr" %}</th>
            <th>{% trans "mail" %}</th>
            <th>{% trans "tel" %}</th>
            <th>{% trans "cel" %}</th>
            <th>{% trans "act" %}</th>
            <th>{% trans "op" %}</th>
            <th>{% trans "type" %}</th>
            <th>&#128; {% trans "rg" %}</th>
        </tr>
        {% for cus in customers %}
        <tr>
            <td><a href='show.php?id={{ cus.id }}'>{{ cus.name }}</a></td>
            <td>{{ cus.surname }}</td>
            <td>{{ cus.cod_fis }}</td>
            <td>{{ cus.piva }}</td>
            <td>{{ cus.address }}</td>
            <td>{{ cus.email }}</td>
            <td>{{ cus.telephone }}</td>
            <td>{{ cus.cellphone }}</td>
            <td>{{ cus.active }}</td>
            <td>{{ cus.operator }}</td>
            <td>{{ cus.type }}</td>
            <td>{{ cus.price_range }}</td>
            <td class="delete"><a href='delete.php?id={{ cus.id }}'><img src="../../../images/icons/delete/delete-256.png" alt='{% trans "del" %}'></a></td>
            <td class="edit"><a href='prepareUpdate.php?id={{ cus.id }}'><img src="../../../images/icons/edit/edit-256.png" alt='{% trans "edit" %}'></a></td>
        </tr>
        {% endfor %}
    </table>
        {% include 'admin/structure/pager.phtml' %}
    {%endif%}
    {% if customers|length == 0 %}
    <p>
        {% trans "nores" %}
    </p>
    {% endif %}
</div>
{% include 'admin/structure/footer.phtml' %}
