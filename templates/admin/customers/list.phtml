{% include 'admin/structure/header.phtml' %}
<div id='content'>

	{% include 'admin/structure/menu.phtml' %}
	<p>
		{{ message }}
	</p>
	{% if customers|length > 0 %}
	<table class="tablelist" style='margin: 50px;'>
		<tr>
			<td>Name</td>
			<td>Surname</td>
			<td>Address</td>
			<td>Email</td>
			<td>Telephone</td>
			<td>Cellphone</td>
			<td>Active</td>
			<td>Operator</td>
                        <td>Type</td>
		</tr>
		{% for cus in customers %}
		<tr>
			<td><a href='show.php?id={{ cus.id }}'>{{ cus.name }}</a></td>
			<td>{{ cus.surname }}</td>
			<td>{{ cus.address }}</td>
			<td>{{ cus.email }}</td>
			<td>{{ cus.telephone }}</td>
			<td>{{ cus.cellphone }}</td>
			<td>{{ cus.active }}</td>
			<td>{{ cus.operator }}</td>
                        <td>{{ cus.type }}</td>
			<td><a href='delete.php?id={{ cus.id }}'>elimina</a></td>
			<td><a href='prepareUpdate.php?id={{ cus.id }}'>modifica</a></td>
		</tr>
		{% endfor %}
	</table>
	{%endif%}
	{% if customers|length == 0 %}
	<p>
		no elements found
	</p>
	{% endif %}
</div>
{% include 'admin/structure/footer.phtml' %}
