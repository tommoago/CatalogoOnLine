{% include 'admin/structure/header.phtml' %}

<div id='content'>
	<p class="detail_adm">
		{% trans "custs" %} {% trans "list" %}
	</p>
	<p>
		{{ message }}
	</p>
	
	{% if custs|length > 0 %}
	<table data-role="table" data-mode="columntoggle">
		<thead>
			<th>{% trans "name" %}</th>
		</thead>
		<tbody>
			{% for cust in custs %}
			<tr>
				<td class="first_id"><a data-role="button" data-inline="true" href='show.php?id={{ cust.id }}'>{{ cust.name }}</a></td>
				<td class="first_id"><a data-role="button" data-icon="custom" data-inline="true" id="modify" href='prepareUpdate.php?id={{ cust.id }}'>{%trans "edit"%}</a></td>
				<td class="first_id"><a data-role="button" data-icon="custom" data-inline="true" id="delete" href='delete.php?id={{ cust.id }}'>{%trans "del"%}</a></td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	{% include 'admin/structure/pager.phtml' %}
	{%endif%}
	{% if custs|length == 0 %}
	<p>
		{% trans "nores" %}
	</p>
	{% endif %}
</div>
{% include 'admin/structure/footer.phtml' %}