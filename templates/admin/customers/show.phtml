{% include 'admin/structure/header.phtml' %}
{% include 'admin/structure/menu.phtml' %}
<div id='content'>
    <p class="detail_adm">{% trans "cust" %}</p>
    <table class="tablelist">
        <tr>
            <th>{% trans "name" %}</th>
            <th>{% trans "sur" %}</th>
            {% if cus.cod_fis != '' %}
            <th>{% trans "codf" %}</th>
            {%endif%}
            {% if cus.piva != '' %}
            <th>{% trans "piva" %}</th>
            {%endif%}
            <th>{% trans "adr" %}</th>
            <th>{% trans "mail" %}</th>
            <th>{% trans "tel" %}</th>
            <th>{% trans "cel" %}</th>
            <th>{% trans "act" %}</th>
            <th>{% trans "op" %}</th>
            <th>{% trans "type" %}</th>
            <th>&#128; {% trans "rg" %}</th>
        </tr>
        <tr>
            <td>{{ cus.name }}</td>
            <td>{{ cus.surname }}</td>
            {% if cus.cod_fis != '' %}
            <td>{{ cus.cod_fis }}</td>
            {%endif%}
            {% if cus.piva != '' %}
            <td>{{ cus.piva }}</td>
            {%endif%}
            <td>{{ cus.address }}</td>
            <td>{{ cus.email }}</td>
            <td>{{ cus.telephone }}</td>
            <td>{{ cus.cellphone }}</td>
            <td>{{ cus.active }}</td>
            <td>{{ cus.operator }}</td>
            <td>{{ cus.type }}</td>
            <td>{{ cus.price_range }}</td>
            <td class="delete"><a href='delete.php?id={{ cus.id }}'><img src="../../../images/icons/delete/delete-256.png" alt='{% trans "del" %}'></a></td>
            <td class="edit"><a href='prepareUpdate.php?id={{ cus.id }}'><img src="../../../images/icons/edit/edit-256.png" alt='{% trans "edit" %}'></a></td>
        </tr>
    </table>
    <table class="tablelist">
        <p class="detail_adm">{% trans "adrs" %}</p>
        <a href='prepareInsert_address.php?cus_id={{ cus.id }}'>{% trans "ins" %} {% trans "new" %} {% trans "adr" %}</a>
        <tr>
            <th>{% trans "street" %}</th>
            <th>{% trans "city" %}</th>
            <th>{% trans "prov" %}</th>
            <th>{% trans "zip" %}</th>
            <th>{% trans "country" %}</th>
        </tr>
        {% for addr in addrs %}
        <tr>
            <td>{{ addr.street }}</td>
            <td>{{ addr.city }}</td>
            <td>{{ addr.province }}</td>
            <td>{{ addr.zip }}</td>
            <td>{{ addr.country }}</td>
            <td class="delete"><a href='delete_address.php?cus_id={{ cus.id }}&id={{ addr.id }}'><img src="../../../images/icons/delete/delete-256.png" alt='{% trans "del" %}'></a></td>
        </tr>
        {% endfor %}
    </table>
</div>
{% include 'admin/structure/footer.phtml' %}
