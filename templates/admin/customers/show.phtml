{% include 'admin/structure/header.phtml' %}

<div id='content'>
	<p class="detail_adm">
		{% trans "cust" %}
	</p>

	<p>
		{% trans "name" %}: {{ cus.name }}
	</p>
	<p>
		{% trans "sur" %}: {{ cus.surname }}
	</p>
	{% if cus.cod_fis != '' %}
	<p>
		{% trans "codf" %}: {{ cus.cod_fis }}
	</p>
	{%endif%}
	{% if cus.piva != '' %}
	<p>
		{% trans "piva" %}: {{ cus.piva }}
	</p>
	{%endif%}
	<p>
		{% trans "adr" %}: {{ cus.address }}
	</p>
	<p>
		{% trans "mail" %}: {{ cus.email }}
	</p>
	<p>
		{% trans "tel" %}: {{ cus.telephone }}
	</p>
	<p>
		{% trans "cel" %}: {{ cus.cellphone }}
	</p>
	<p>
		{% trans "act" %}: {{ cus.active }}
	</p>
	<p>
		{% trans "op" %}: {{ cus.operator }}
	</p>
	<p>
		{% trans "type" %}: {{ cus.type }}
	</p>
	<p>
		&#128; {% trans "rg" %}: {{ cus.price_range }}
	</p>

	<a data-role="button" href='delete.php?id={{ cus.id }}'><img src="../../../images/icons/delete/delete-256.png" height="50px" alt='{% trans "del" %}'></a>
	<a data-role="button" href='prepareUpdate.php?id={{ cus.id }}'><img src="../../../images/icons/edit/edit-256.png" height="50px" alt='{% trans "edit" %}'></a>

	<p class="detail_add">
		{% trans "adrs" %}
	</p>
	<div class="add_add">
		<a data-role="button" href='prepareInsert_address.php?cus_id={{ cus.id }}'><img height="50px" alt='{% trans "ins" %} {% trans "new" %} {% trans "adr" %}' src="../../../images/icons/Adds/add_list/add_list-256.png"></a>
	</div>
	<p>{% trans "rot" %}</p>
	<table data-role="table" data-mode="clumntoggle">
		<thead>
			<th>{% trans "street" %}</th>
			<th>{% trans "city" %}</th>
			<th>{% trans "prov" %}</th>
			<th>{% trans "zip" %}</th>
			<th>{% trans "country" %}</th>
		</thead>
		<tbody>
			{% for addr in addrs %}
			<tr>
				<td>{{ addr.street }}</td>
				<td>{{ addr.city }}</td>
				<td>{{ addr.province }}</td>
				<td>{{ addr.zip }}</td>
				<td>{{ addr.country }}</td>
				<td class="delete"><a href='delete_address.php?cus_id={{ cus.id }}&id={{ addr.id }}'><img src="../../../images/icons/delete/delete-256.png" width="20%" alt='{% trans "del" %}'></a></td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
</div>{% include 'admin/structure/menu.phtml' %}
{% include 'admin/structure/footer.phtml' %}
