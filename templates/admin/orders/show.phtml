{% include 'admin/structure/header.phtml' %}
{% include 'admin/structure/menu.phtml' %}
<div id='content'>
    <p class="detail_adm">{% trans "ord" %}</p>
    <p>{{ message }}</p>
    <table class="tablelist">
        <tr>
            <th>{% trans "id" %}</th>
            <th>{% trans "date" %}</th>
            <th>{% trans "confed" %}</th>
            <th>{% trans "confirm" %} {% trans "date" %}</th>
            <th>{% trans "op" %}</th>
            <th>{% trans "cust" %}</th>
        </tr>
        <tr>
            <td class="first_id"><a href='show.php?id={{ ord.id }}'>{{ ord.id }}</a></td>
            <td>{{ ord.data }}</td>
            <td>{% if ord.confirmed == 1 %}
                <p style="color:#008000;text-align:center">&#x2713;</p>  
                {% endif %}
                {% if ord.confirmed == 0 %}
                <p style="color:#D40303;text-align:center">&#x2717;</p>  
                {% endif %}</td>
            <td>{{ ord.confirm_date }}</td>
            <td>{{ ord.operator }}</td>
            <td>{{ ord.customer }}</td>
        </tr>
        <!--vedi commento su modifche file php-->
        <!--        {% for prod in products %}
                <tr>
                    <td><a href='../products/show.php?id={{ prod.id }}'>{{ prod.name }}</a></td>
                    <td>{{ prod.quantity }}</td>
                </tr>
                {% endfor %}-->
    </table>
    <ul>
        {% if ord.confirmed != 1%}
        <li class="confirm_order">
            <a href='confirm.php?id={{ ord.id }}' onclick="return confirm('{% trans "conford" %}');"><img src="../../../images/icons/checkmark/checkmark-256.png" alt='{% trans "pdf" %}'>{% trans "confirm" %} {% trans "ord" %}</a>
        </li>
        {% endif %}
        {% if ord.invoice != ''%}
        <li class="pdf_invoice">
            <a href='{{ ord.pdf }}'><img src="../../../images/icons/pdf/pdf-256.png" alt='{% trans "pdf" %}'>{% trans "sho" %} {% trans "pdf" %}</a>
        </li> 
        <li class="create_invoice">
            <a href='{{ ord.invoice }}'><img src="../../../images/icons/accounting/purchase_order/purchase_order-256.png" alt='{% trans "print" %}'>{% trans "crt" %} {% trans "inv" %}</a>
        </li>
        {% endif %}
    </ul>
</div>
{% include 'admin/structure/footer.phtml' %}
