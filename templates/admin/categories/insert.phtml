{% include 'header.phtml' %} 
<script type="text/javascript" src="/melarossa/scripts/jquery-1.9.1.min.js"></script>
<script type="text/javascript" src="/melarossa/scripts/form.categories.validation.js"></script>
<script type="text/javascript" src="/melarossa/scripts/jquery.validate.js"></script>
<div id='content'>

	{% include 'menu.phtml' %}
	<form action="insert.php" method="post" style="padding-left: 270px;" id="formcategories" enctype="multipart/form-data">
		<div class="totwidth">
			<div class="panleft">
				Name:
			</div>
			<div class="panleft">
				<input type="text" id="name" name="name"/>
			</div>
		</div>
		<br>
		<div class="totwidth">
			<div class="panleft">
				Category:
			</div>
			<div class="panleft">
				<select name="cat_id">
					{% for cat in cats %}
					<option value="{{ cat.id }}">{{ cat.name }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
		<br>
		<input type="submit" value="invio"/>

	</form>
</div>

