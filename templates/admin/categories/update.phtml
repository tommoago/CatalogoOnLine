{% include 'admin/structure/header.phtml' %}
{% include 'admin/structure/menu.phtml' %}
<script type="text/javascript" src="../../../scripts/jquery.validate.js"></script>
<script type="text/javascript" src="../../../scripts/validation/admin/form.categories.validation.js"></script>
<div id='content'>
	<form action="update.php" method="post" id="formcategories">
		<input type="hidden" name="id" value="{{ cat.id }}"/>
		<div class="totwidth">
			<div class="panleft1">
				Name
			</div>
			<div class="panleft2">
				<input type="text" name="name" value="{{ cat.name }}"/>
			</div>
		</div>
		<div class="totwidth">
			<div class="panleft1">
				Category
			</div>

			<div class="panleft2">
				<select name="cat_id">
					{% for category in cats %}
					<option value="{{ category.id }}" {{ category.selected }}>{{ category.name }}</option>
					{% endfor %}
				</select>
			</div>
		</div>
		<input class="invio" type="submit" value="Invio"/>

	</form>
</div>
