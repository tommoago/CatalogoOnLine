{% include 'header.phtml' %}
<div id='content'>

	{% include 'menu.phtml' %}
	<form action="update.php" method="post" style="padding-left: 270px;" enctype="multipart/form-data">
		<input type="hidden" name="id" value="{{ prod.id }}"/>
		<br>
		
			Select a file to upload
		
			<input type="file" name="uploaded" id="file" value="{{ prod.image }}">
			<br>

	
			Name
		
		<input type="text" name="name" value="{{ prod.name }}"/>
		<br>

		
			Description
		
		<input type="text" name="descr" value="{{ prod.description }}"/>
		<br>

		
			New
		
		<input type="checkbox" name="new" {{ prod.c_new }}/>
		<br>

		
			Offer
		
		<input type="checkbox" name="offer" {{ prod.c_offer }}/>
		<br>

		
			Evidence
		
		<input type="checkbox" name="evidence" {{ prod.c_evidence }}/>
		<br>

		
			Wholesale Price
		
		<input type="text" name="w_price" value="{{ prod.wholesale_price }}"/>
		<br>

		
			Retail Price
		
		<input type="text" name="r_price" value="{{ prod.retail_price }}"/>
		<br>

		
			Super Price
		
		<input type="text" name="s_price" value="{{ prod.super_price }}"/>
		<br>

		
			Purchase Price
		
		<input type="text" name="p_price" value="{{ prod.purchase_price }}"/>
		<br>

	
			Cod
		
		<input type="text" name="cod" value="{{ prod.cod }}"/>
		<br>

		
			Barcode
		
		<input type="text" name="barcode" value="{{ prod.barcode }}"/>
		<br>

	
			Single Qty
		
		<input type="text" name="s_qty" value="{{ prod.single_qty }}"/>
		<br>

		
			pack Qty
		
		<input type="text" name="p_qty" value="{{ prod.pack_qty }}"/>
		<br>

		
			Cardboard Qty
		
		<input type="text" name="c_qty" value="{{ prod.cardboard_qty }}"/>
		<br>

		
			Categoy
		

		<select name="cat_id">
			{% for cat in cats %}
			<option value="{{ cat.id }}" {{ cat.selected }}>{{ cat.name }}</option>
			{% endfor %}
		</select>

		<input type="submit" value="invio"/>

	</form>
	{% include 'footer.phtml' %}
