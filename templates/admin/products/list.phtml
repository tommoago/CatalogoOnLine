{% include 'admin/structure/header.phtml' %}
{% include 'admin/structure/menu.phtml' %}
<div id='content'>
    {% if prods|length > 0 %}
    <table class="tablelist">
        <tr>
            <th>{% trans "name" %}</th>
<!--             <th>{% trans "descr" %}</th> -->
            <th>{% trans "new" %}</th>
            <th>{% trans "ofr" %}</th>
            <th>{% trans "hlg" %}</th>
            <th>{% trans "wh" %} &#128;</th>
            <th>{% trans "ret" %} &#128;</th>
            <th>{% trans "super" %} &#128;</th>
            <th>{% trans "pur" %} &#128;</th>
            <th>{% trans "cod" %}</th>
            <th>{% trans "bcod" %}</th>
            <th>{% trans "sng" %} {% trans "qty" %}</th>
            <th>{% trans "pck" %} {% trans "qty" %}</th>
            <th>{% trans "cdb" %} {% trans "qty" %}</th>
            <th>{% trans "cat" %}</th>
            <th>{% trans "sup" %}</th>
        </tr>
        {% for prod in prods %}
        <tr>
            <td><a href='show.php?id={{ prod.id }}'>{{ prod.name }}</a></td>
<!--             <td>{{ prod.description }}</td> -->
            <td>
<!--             {{ prod.new }} -->
            	{% if prod.new == 1 %}
           	<p style="color:#008000">&#x2713;</p>  
        	     {% endif %}
       	     {% if prod.new == 0 %}
      	    	<p style="color:#D40303">&#x2717;</p>  
            	{% endif %}</td>
            <td>
<!--             {{ prod.offer }} -->
           	{% if prod.offer == 1 %}
           	<p style="color:#008000">&#x2713;</p>  
        	     {% endif %}
       	     {% if prod.offer == 0 %}
      	    	<p style="color:#D40303">&#x2717;</p>  
            	{% endif %}</td>
            <td>
<!--             {{ prod.evidence }} -->
            	{% if prod.evidence == 1 %}
           	<p style="color:#008000">&#x2713;</p>  
        	     {% endif %}
       	     {% if prod.evidence == 0 %}
      	    	<p style="color:#D40303">&#x2717;</p>  
            	{% endif %}</td>
            <td>{{ prod.wholesalfe_price }}</td>
            <td>{{ prod.retaoil_price }}</td>
            <td>{{ prod.super_price }}</td>
            <td>{{ prod.purchase_price }}</td>
            <td>{{ prod.cod }}</td>
            <td>{{ prod.barcode }}</td>
            <td>{{ prod.single_qty }}</td>
            <td>{{ prod.pack_qty }}</td>
            <td>{{ prod.cardboard_qty }}</td>
            <td>{{ prod.category }}</td>
            <td>{{ prod.supplier }}</td>
            <td class="delete"><a href='delete.php?id={{ prod.id }}'><img src="../../../images/icons/delete/delete-256.png" alt="Delete"></a></td>
            <td class="edit"><a href='prepareUpdate.php?id={{ prod.id }}'><img src="../../../images/icons/edit/edit-256.png" alt="Edit"> </a></td>
        </tr>
        {% endfor %}
    </table>
        {% include 'admin/structure/pager.phtml' %}
    {%endif%}
    {% if prods|length == 0 %}
    <p>
        {% trans "nores" %}
    </p>
    {% endif %}
</div>

{% include 'admin/structure/footer.phtml' %}