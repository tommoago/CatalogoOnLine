{% include 'admin/structure/header.phtml' %} 
{% include 'admin/structure/menu.phtml' %}
<script type="text/javascript" src="../../../scripts/jquery.validate.js"></script>
<script type="text/javascript" src="../../../scripts/validation/admin/form.product.validation.js"></script>
<script type="text/javascript">
$(function () {
        $('#w_price').parent().contents(':not(input)').remove();
        var per = $('#w_price').val();
        var multiplier = 1 + (per / 100);
        var rw = $('#p_price').val() * multiplier;
        $('#w_price').after(parseFloat(rw).toFixed(3));
        
        $('#r_price').parent().contents(':not(input)').remove();
        var per = $('#r_price').val();
        var multiplier = 1 + (per / 100);
        var rr = $('#p_price').val() * multiplier;
        $('#r_price').after(parseFloat(rr).toFixed(3));
        
        $('#s_price').parent().contents(':not(input)').remove();
        var per = $('#s_price').val();
        var multiplier = 1 + (per / 100);
        var rss = $('#p_price').val() * multiplier;
        $('#s_price').after(parseFloat(rss).toFixed(3));
    });
    function calculate(percentage) {
        $('#' + percentage.id).parent().contents(':not(input)').remove();
        var per = percentage.value;
        var multiplier = 1 + (per / 100);
        var rs = $('#p_price').val() * multiplier;
        $('#' + percentage.id).after(parseFloat(rs).toFixed(3));
    }
</script>
<div id='content'>
    {{ message }}
    <form action="insert.php" method="post" id="formproduct" enctype="multipart/form-data">
        <div class="totwidth">
            <div class="panleft1">
                Image:
            </div>
            <div class="panleft2">
                <input type="file" name="uploaded" id="file">
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Name:
            </div>
            <div class="panleft2">
                <input type="text" id="name" name="name"/>
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Description:
            </div>
            <textarea id="textarea" name="descr" rows="1" cols="50"></textarea>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                New:
            </div>
            <div class="panleft2">
                <input type="checkbox" name="new" />
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Offer:
            </div>
            <div class="panleft2">
                <input type="checkbox" name="offer" />
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Evidence:
            </div>
            <div class="panleft2">
                <input type="checkbox" name="evidence" />
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Purchase Price:
            </div>
            <div class="panleft2">
                <input type="text" id="p_price" name="p_price"/>
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Wholesale Price:
            </div>
            <div class="panleft2">
                <input type="text" id="w_price" onchange="calculate(this);" name="w_price"/>
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Retail Price:
            </div>
            <div class="panleft2">
                <input type="text" id="r_price" onchange="calculate(this);" name="r_price"/>
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Super Price:
            </div>
            <div class="panleft2">
                <input type="text" id="s_price" onchange="calculate(this);" name="s_price"/>
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Cod:
            </div>
            <div class="panleft2">
                <input type="text" id="cod" name="cod"/>
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Barcode:
            </div>
            <div class="panleft2">
                <input type="text" id="barcode" name="barcode"/>
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Single Q.ty:
            </div>
            <div class="panleft2">
                <input type="text" id="s_qty" name="s_qty"/>
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Pack Q.ty:
            </div>
            <div class="panleft2">
                <input type="text" id="p_qty" name="p_qty"/>
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Cardboard Q.ty:
            </div>
            <div class="panleft2">
                <input type="text" id="c_qty" name="c_qty"/>
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Category:
            </div>
            <div class="panleft2">
                <select name="cat_id">
                    {% for cat in cats %}
                    <option value="{{ cat.id }}">{{ cat.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="totwidth">
            <div class="panleft1">
                Supplier:
            </div>
            <div class="panleft2">
                <select name="sup_id">
                    {% for sup in supps %}
                    <option value="{{ sup.id }}">{{ sup.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <input type="submit" value="invio"/>
    </form>
</div>
{% include 'admin/structure/footer.phtml' %}
